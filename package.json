{
	"name": "@context-action/dependency-linker",
	"version": "2.1.0",
	"description": "Advanced TypeScript Dependency Analysis Tool - High-performance AST analysis with type safety, namespace management, compliance checking, and intelligent caching. Built for large-scale projects with 10,000+ files/sec processing capability.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"bin": {
		"dependency-linker": "./dist/cli/main.js",
		"namespace-analyzer": "./dist/cli/namespace-analyzer.js"
	},
	"scripts": {
		"build": "tsc && npm run copy:schema",
		"build:clean": "rm -rf dist && npm run build",
		"copy:schema": "cp src/database/schema.sql dist/database/",
		"test": "npm run build && npx ts-node tests/root/test-complete.ts",
		"test:quick": "npm run build && npx ts-node tests/root/test-suite.ts",
		"test:jest": "jest --runInBand",
		"test:parallel": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage --runInBand",
		"test:unit": "jest tests/unit/ --runInBand",
		"test:integration": "jest tests/integration/ --runInBand",
		"test:core": "npm run build && npx ts-node tests/root/test-core-features.ts",
		"test:integration-only": "npm run build && npx ts-node tests/root/test-integration.ts",
		"test:performance": "npm run build && npx ts-node tests/performance/test-performance-optimization.ts",
		"test:advanced": "npm run build && npx ts-node tests/advanced/test-advanced-inference-system.ts",
		"test:all": "npm run test:jest && npm run test:core && npm run test:integration-only",
		"lint": "biome check src/",
		"lint:fix": "biome check --write src/",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"typecheck": "tsc --noEmit",
		"dev": "tsc --watch",
		"start": "node dist/cli/analyze-file.js",
		"analyze": "node dist/cli/main.js analyze",
		"analyze:perf": "node dist/cli/main.js analyze --performance",
		"namespace": "node dist/cli/main.js namespace",
		"namespace:list": "node dist/cli/main.js namespace --list",
		"namespace:all": "node dist/cli/main.js namespace --all",
		"watch": "node dist/cli/main.js watch",
		"schedule": "node dist/cli/main.js schedule",
		"compliance": "node dist/cli/main.js compliance",
		"init": "node dist/cli/main.js init",
		"verify-separation": "bash scripts/verify-separation.sh",
		"validate-types": "node scripts/validate-types.js",
		"diagnostic": "node scripts/diagnostic-cli.js",
		"prepack": "npm run build",
		"prepublishOnly": "npm run typecheck"
	},
	"keywords": [
		"query-system",
		"ast-analysis",
		"typescript-first",
		"queryresultmap",
		"language-specific",
		"custom-mapping",
		"tree-sitter",
		"type-safety",
		"extensible-queries",
		"multi-language",
		"code-analysis"
	],
	"author": "",
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@anthropic-ai/claude-code": "^2.0.0",
		"@types/glob": "^8.1.0",
		"@types/sqlite3": "^3.1.11",
		"commander": "^14.0.1",
		"glob": "^11.0.3",
		"sqlite3": "^5.1.7",
		"tree-sitter": "^0.21.0",
		"tree-sitter-go": "^0.21.2",
		"tree-sitter-java": "^0.21.0",
		"tree-sitter-python": "^0.21.0",
		"tree-sitter-typescript": "^0.23.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"@types/jest": "^30.0.0",
		"@types/node": "^22.18.6",
		"jest": "^29.0.0",
		"ts-jest": "^29.0.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.0.0"
	}
}
