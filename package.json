{
	"name": "typescript-dependency-linker",
	"version": "2.0.0",
	"description": "A powerful and extensible tool for analyzing, visualizing, and managing dependencies in TypeScript projects. Provides a rich API for dependency analysis, task management, and batch processing.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"bin": {
		"analyze-file": "dist/cli/analyze-file.js",
		"tsdl": "dist/cli/index.js"
	},
	"scripts": {
		"build": "tsc",
		"build:clean": "rm -rf dist && npm run build",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"lint": "biome check src/",
		"lint:fix": "biome check --write src/",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"typecheck": "tsc --noEmit",
		"dev": "tsc --watch",
		"start": "node dist/cli/analyze-file.js",
		"verify-separation": "bash scripts/verify-separation.sh",
		"validate-types": "node scripts/validate-types.js",
		"benchmark": "node scripts/benchmark.js",
		"benchmark:quick": "node -e \"require('./scripts/benchmark.js').runBenchmark('Single File Analysis (Medium)', require('./scripts/benchmark.js').benchmarks['Single File Analysis (Medium)'], 1)\"",
		"diagnostic": "node scripts/diagnostic-cli.js",
		"optimize-tests": "node -r ts-node/register src/cli/commands/optimize-tests.ts",
		"optimize-tests-simple": "node -r ts-node/register src/cli/commands/optimize-tests-simple.ts",
		"prepack": "npm run build",
		"prepublishOnly": "npm run lint && npm run typecheck && npm run test"
	},
	"keywords": [
		"tree-sitter",
		"typescript",
		"ast",
		"dependency-analysis",
		"single-file"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@types/glob": "^8.1.0",
		"commander": "^14.0.1",
		"glob": "^11.0.3",
		"tree-sitter": "^0.21.0",
		"tree-sitter-go": "^0.21.2",
		"tree-sitter-java": "^0.21.0",
		"tree-sitter-typescript": "^0.23.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"@types/jest": "^29.0.0",
		"@types/node": "^20.19.14",
		"jest": "^29.0.0",
		"ts-jest": "^29.0.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.0.0"
	}
}
