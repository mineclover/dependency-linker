{
	"name": "@context-action/dependency-linker",
	"version": "3.0.0",
	"description": "Query-Based AST Analysis Library - TypeScript-first AST analysis with extensible query system. QueryResultMap-centric architecture with language-specific query grouping and custom key mapping.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"bin": {
		"namespace-analyzer": "./dist/cli/namespace-analyzer.js"
	},
	"scripts": {
		"build": "tsc",
		"build:clean": "rm -rf dist && npm run build",
		"test": "jest --runInBand",
		"test:parallel": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage --runInBand",
		"test:unit": "jest tests/unit/ --runInBand",
		"test:integration": "jest tests/integration/ --runInBand",
		"lint": "biome check src/",
		"lint:fix": "biome check --write src/",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"typecheck": "tsc --noEmit",
		"dev": "tsc --watch",
		"start": "node dist/cli/analyze-file.js",
		"namespace": "node dist/cli/namespace-analyzer.js",
		"verify-separation": "bash scripts/verify-separation.sh",
		"validate-types": "node scripts/validate-types.js",
		"diagnostic": "node scripts/diagnostic-cli.js",
		"prepack": "npm run build",
		"prepublishOnly": "npm run typecheck"
	},
	"keywords": [
		"query-system",
		"ast-analysis",
		"typescript-first",
		"queryresultmap",
		"language-specific",
		"custom-mapping",
		"tree-sitter",
		"type-safety",
		"extensible-queries",
		"multi-language",
		"code-analysis"
	],
	"author": "",
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@anthropic-ai/claude-code": "^2.0.0",
		"@types/glob": "^8.1.0",
		"@types/sqlite3": "^3.1.11",
		"commander": "^14.0.1",
		"glob": "^11.0.3",
		"sqlite3": "^5.1.7",
		"tree-sitter": "^0.21.0",
		"tree-sitter-go": "^0.21.2",
		"tree-sitter-java": "^0.21.0",
		"tree-sitter-python": "^0.21.0",
		"tree-sitter-typescript": "^0.23.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"@types/jest": "^30.0.0",
		"@types/node": "^22.18.6",
		"jest": "^29.0.0",
		"ts-jest": "^29.0.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.0.0"
	}
}
