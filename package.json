{
	"name": "@context-action/dependency-linker",
	"version": "2.3.5",
	"description": "Multi-language AST-based code analysis framework with extensible plugin architecture. Supports TypeScript, Go, Java, Markdown, and custom analysis types through tree-sitter parsers.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "tsc",
		"build:clean": "rm -rf dist && npm run build",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test:unit": "jest tests/unit/",
		"test:integration": "jest tests/integration/",
		"test:contract": "jest tests/contract/",
		"test:performance": "jest tests/performance/",
		"lint": "biome check src/",
		"lint:fix": "biome check --write src/",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"typecheck": "tsc --noEmit",
		"dev": "tsc --watch",
		"start": "node dist/cli/analyze-file.js",
		"verify-separation": "bash scripts/verify-separation.sh",
		"validate-types": "node scripts/validate-types.js",
		"benchmark": "node scripts/benchmark.js",
		"benchmark:quick": "node -e \"require('./scripts/benchmark.js').runBenchmark('Single File Analysis (Medium)', require('./scripts/benchmark.js').benchmarks['Single File Analysis (Medium)'], 1)\"",
		"benchmark:export-extractor": "node -r ts-node/register tests/performance/EnhancedExportExtractor.benchmark.ts",
		"diagnostic": "node scripts/diagnostic-cli.js",
		"optimize-tests": "node -r ts-node/register src/cli/commands/optimize-tests.ts",
		"optimize-tests-simple": "node -r ts-node/register src/cli/commands/optimize-tests-simple.ts",
		"prepack": "npm run build",
		"prepublishOnly": "npm run typecheck"
	},
	"keywords": [
		"tree-sitter",
		"ast",
		"dependency-analysis",
		"multi-language",
		"typescript",
		"go",
		"java",
		"markdown",
		"code-analysis",
		"parser",
		"plugin-architecture"
	],
	"author": "",
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@types/glob": "^8.1.0",
		"commander": "^14.0.1",
		"glob": "^11.0.3",
		"tree-sitter": "^0.21.0",
		"tree-sitter-go": "^0.21.2",
		"tree-sitter-java": "^0.21.0",
		"tree-sitter-typescript": "^0.23.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"@types/jest": "^30.0.0",
		"@types/node": "^22.18.6",
		"jest": "^29.0.0",
		"ts-jest": "^29.0.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.0.0"
	}
}
