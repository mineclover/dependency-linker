{
  "version": "1.0.0",
  "databases": {
    "files": {
      "title": "Project Files",
      "description": "Track all project files and their relationships",
      "initial_data_source": {
        "title": "Files Data Source",
        "properties": {
          "Name": {
            "type": "title",
            "title": {}
          },
          "File Path": {
            "type": "rich_text",
            "rich_text": {}
          },
          "Size (bytes)": {
            "type": "number",
            "number": {
              "format": "number"
            }
          },
          "Extension": {
            "type": "select",
            "select": {
              "options": [
                { "name": ".ts", "color": "blue" },
                { "name": ".tsx", "color": "purple" },
                { "name": ".js", "color": "yellow" },
                { "name": ".jsx", "color": "green" },
                { "name": ".json", "color": "gray" },
                { "name": ".md", "color": "orange" },
                { "name": ".yaml", "color": "pink" },
                { "name": ".yml", "color": "pink" },
                { "name": "Other", "color": "default" }
              ]
            }
          },
          "Language": {
            "type": "select",
            "select": {
              "options": [
                { "name": "TypeScript", "color": "blue" },
                { "name": "JavaScript", "color": "yellow" },
                { "name": "JSON", "color": "gray" },
                { "name": "Markdown", "color": "orange" },
                { "name": "YAML", "color": "pink" },
                { "name": "Other", "color": "default" }
              ]
            }
          },
          "Project": {
            "type": "select",
            "select": {
              "options": [
                { "name": "dependency-linker", "color": "blue" },
                { "name": "test-project", "color": "gray" }
              ]
            }
          },
          "Status": {
            "type": "select",
            "select": {
              "options": [
                { "name": "Active", "color": "green" },
                { "name": "Updated", "color": "blue" },
                { "name": "Archived", "color": "gray" },
                { "name": "Deleted", "color": "red" },
                { "name": "Error", "color": "red" }
              ]
            }
          },
          "Last Modified": {
            "type": "date",
            "date": {}
          },
          "Dependencies Count": {
            "type": "number",
            "number": {}
          },
          "Functions Count": {
            "type": "number",
            "number": {}
          },
          "Classes Count": {
            "type": "number",
            "number": {}
          },
          "Lines of Code": {
            "type": "number",
            "number": {}
          }
        },
        "relations": {
          "Dependencies": {
            "type": "relation",
            "target": "dependencies",
            "relation_type": "single_property"
          },
          "Libraries": {
            "type": "relation",
            "target": "libraries",
            "relation_type": "single_property"
          },
          "Functions": {
            "type": "relation",
            "target": "functions",
            "relation_type": "single_property"
          },
          "Imports": {
            "type": "relation",
            "target": "files",
            "relation_type": "dual_property",
            "synced_property_name": "Imported By",
            "synced_property_id": "imported_by"
          }
        }
      }
    },
